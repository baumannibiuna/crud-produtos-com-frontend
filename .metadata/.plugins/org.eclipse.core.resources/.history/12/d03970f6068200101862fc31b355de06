# Build stage
FROM --platform=linux/arm64 eclipse-temurin:17-jdk-focal as builder

WORKDIR /app

# Copia apenas os arquivos necessários para o build
COPY build.gradle .
COPY src ./src
COPY gradlew .
COPY gradle ./gradle

# Dá permissão de execução ao gradlew
RUN chmod +x gradlew

# Executa o build
RUN ./gradlew clean build -x test

# Production stage
FROM --platform=linux/arm64 eclipse-temurin:17-jre-focal

WORKDIR /app

# Copia o JAR do stage de build
COPY --from=builder /app/build/libs/*.jar app.jar

EXPOSE 8080

ENTRYPOINT ["java", "-jar", "app.jar"]